{
  "extends": ["tslint:recommended"],
  "rules": {
    "arrow-parens": [true, "ban-single-arg-parens"],
    "interface-name": false,
    "max-line-length": [true, 150],
    "quotemark": [true, "single", "jsx-double"],
    "semicolon": [true, "never"]
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  }
}
